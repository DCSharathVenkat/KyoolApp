  }, [isAuthenticated, isAppUser, location.pathname, navigate]);

  // Firebase auth listener + backend user check
  useEffect(() => {
    const unsubscribe = auth.onAuthStateChanged(async (u) => {
      if (u) {
        setIsAuthenticated(true);
        setUser({
          id: u.uid,
          name: u.displayName,
          email: u.email,
          avatar: u.photoURL,
        });
        try {
          const res = await fetch(
            `${BASE_URL}/users/by-email/${encodeURIComponent(
              u.email ?? ""
            )}`
          );
          if (res.ok) {
            const userData = await res.json();
            setIsAppUser(true);
            setUser({
              ...userData,
              id: userData.id || userData.userId || userData.uid || u.uid,
              avatar: userData.avatar || u.photoURL,
              photoURL: u.photoURL,
            });
          } else {
            setIsAppUser(false);
            setUser(null);
          }
        } catch {
          setIsAppUser(false);
          setUser(null);
        }
      } else {
        setIsAuthenticated(false);
        setUser(null);
        setIsAppUser(true);
      }
    });
    return () => unsubscribe();
  }, [navigate]);

